<?xml version="1.0" encoding="UTF-8" ?>
<window>
    <defaultcontrol>110</defaultcontrol>
    <controls>
        <control type="image">
            <left>-2000</left>
            <top>-2000</top>
            <width>6000</width>
            <height>6000</height>
            <animation effect="fade" time="300">VisibleChange</animation>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <texture colordiffuse="C2FFFFFF">colors/black.png</texture>
        </control>
        <control type="image">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>720</width>
            <height>360</height>
            <texture colordiffuse="ff222222">colors/white.png</texture>
        </control>
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>720</width>
            <height>360</height>
            <control type="label">
                <aligny>center</aligny>
                <align>right</align>
                <top>10</top>
                <left>10</left>
                <width>120</width>
                <height>20</height>
                <label>Intensidad</label>
            </control>
            <control type="progress" id="108">
                <top>10</top>
                <left>140</left>
                <width>570</width>
                <height>20</height>
            </control>
            <control type="label">
                <aligny>center</aligny>
                <align>right</align>
                <top>40</top>
                <left>10</left>
                <width>120</width>
                <height>20</height>
                <label>Calidad</label>
            </control>
            <control type="progress" id="109">
                <top>40</top>
                <left>140</left>
                <width>570</width>
                <height>20</height>
            </control>
            <control type="group">
                <centerleft>50%</centerleft>
                <centertop>50%</centertop>
                <width>680</width>
                <height>180</height>
                <control type="label" id="112">
                    <aligny>center</aligny>
                    <align>center</align>
                    <centertop>30%</centertop>
                    <centerleft>50%</centerleft>
                    <height>20</height>
                    <label>Progreso del barrido</label>
                </control>
                <control type="progress" id="113">
                    <centertop>60%</centertop>
                    <centerleft>50%</centerleft>
                    <height>20</height>
               </control>
            </control>
            <control type="button" id="110">
                <label>Iniciar</label>
                <onright>111</onright>
                <align>center</align>
                <aligny>center</aligny>
                <top>80r</top>
                <centerleft>50%</centerleft>
                <width>180</width>
                <height>80</height>
            </control>
        </control>
    </controls>
</window>
