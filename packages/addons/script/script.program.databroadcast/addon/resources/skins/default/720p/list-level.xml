<?xml version="1.0" encoding="UTF-8" ?>
<window>
    <!--defaultcontrol>111</defaultcontrol>
    <defaultcontrol>122</defaultcontrol>-->
    <controls>

        <!-- Background -->
        <control type="image">
            <width>100%</width>
            <height>100%</height>
            <texture>$INFO[Window.Property(dbc_background)]</texture>
        </control>
        
        <control type="image">
            <width>480</width>
            <height>32</height>
            <top>4</top>
            <left>4</left>
            <texture colordiffuse="55333333">colors/white.png</texture>
        </control>
        <control type="label">
            <width>480</width>
            <height>32</height>
            <top>4</top>
            <left>4</left>
            <align>center</align>
            <!-- <aligny>center</aligny> -->
            <label>$INFO[System.Date]</label>
        </control>
        
        <!-- Base container -->
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>720</width>
            <height>720</height>

            <!-- Top header -->
            <control type="image">
                <top>24</top>
                <centerleft>50%</centerleft>
                <width>180</width>
                <height>36</height>
                <texture>$INFO[Window.Property(dbc_top_header)]</texture>
            </control>

            <control type="image">
                <top>90</top>
                <width>710</width>
                <height>500</height>
                <centerleft>50%</centerleft>
                <texture>dialogs/dialog-bg-nobo.png</texture>
            </control>

            <!-- Control tab strip -->
            <control type="list" id="100">
                <orientation>horizontal</orientation>
                <centerleft>50%</centerleft>
                <top>90</top>
                <width>710</width>
                <height>36</height>
                <itemlayout width="177">
                    <control type="label">
                        <centerleft>50%</centerleft>
                        <width>157</width>
                        <align>center</align>
                        <!-- <aligny>center</aligny> -->
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="image">
                        <width>173</width>
                        <centerleft>50%</centerleft>
                        <height>2</height>
                        <top>2r</top>
                        <texture>colors/white.png</texture>
                        <visible>String.IsEqual(Window.Property(selectedTab), ListItem.Property(index))</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="177">
                    <control type="image">
                        <texture colordiffuse="button_focus">colors/grey.png</texture>
                        <include>Animation_FocusTextureFade</include>
                    </control>
                    <control type="label">
                        <centerleft>50%</centerleft>
                        <width>157</width>
                        <align>center</align>
                        <!-- <aligny>center</aligny> -->
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="image">
                        <width>173</width>
                        <centerleft>50%</centerleft>
                        <height>2</height>
                        <top>2r</top>
                        <texture>colors/white.png</texture>
                        <visible>String.IsEqual(Window.Property(selectedTab), ListItem.Property(index))</visible>
                    </control>
                </focusedlayout>
            </control>

            <!-- List layout -->
            <control type="list" id="111">
                <centerleft>50%</centerleft>
                <width>710</width>
                <height>450</height>
                <top>130</top>
                <visible>String.IsEqual(Container(100).ListItem(Container(100).CurrentItem).Property(mode), list)</visible>
                <orientation>vertical</orientation>
                <!--<onup>100</onup>-->
                <itemlayout height="32">
                    <control type="label">
                        <width>690</width>
                        <align>left</align>
                        <left>12</left>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="32">
                    <control type="image">
                        <texture colordiffuse="button_focus">colors/grey.png</texture>
                    </control>
                    <control type="label">
                        <width>690</width>
                        <align>left</align>
                        <left>12</left>
                        <scroll>true</scroll>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>

            <!-- Table layout -->
            <control type="group" id="120">
                <centerleft>50%</centerleft>
                <width>710</width>
                <height>450</height>
                <top>130</top>
                <centerleft>50%</centerleft>
                <visible>String.IsEqual(Container(100).ListItem(Container(100).CurrentItem).Property(mode), table)</visible>

                <!-- Header row -->
                <control type="image">
                    <width>710</width>
                    <height>32</height>
                    <centerleft>50%</centerleft>
                    <texture colordiffuse="22999999">colors/white.png</texture>
                </control>

                <control type="label" id="121">
                    <centerleft>50%</centerleft>
                    <width>710</width>
                    <height>32</height>
                    <align>left</align>
                    <aligny>center</aligny>
                    <label>Placeholder text</label>
                    <font>Mono26</font>
                </control>

                <!-- Actual "table" -->
                <control type="list" id="122">
                    <top>36</top>
                    <!--<onup>100</onup>-->
                    <centerleft>50%</centerleft>
                    <itemlayout height="32">
                        <control type="label">
                            <!-- <centerleft>50%</centerleft> -->
                            <width>710</width>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Mono26</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="32">
                        <control type="image">
                            <texture colordiffuse="button_focus">colors/grey.png</texture>
                        </control>
                        <control type="label">
                            <!-- <centerleft>50%</centerleft> -->
                            <width>710</width>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Mono26</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <!-- Navigation footer -->
            <control type="image">
                <centerleft>50%</centerleft>
                <width>710</width>
                <top>594</top>
                <height>56</height>
                <texture>$INFO[Window.Property(dbc_hint)]</texture>
            </control>
        </control>

    </controls>
</window>